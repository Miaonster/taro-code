{
  "private": true,
  "name": "taro-code-root",
  "description": "Taro.js barcode & qrcode",
  "homepage": "https://github.com/miaonster/taro-code",
  "license": "MIT",
  "author": "miaonster <miaonster17@gmail.com>",
  "scripts": {
    "lint": "lerna run lint",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "build:component": "lerna run --scope taro-code build",
    "clean": "lerna run clean",
    "clean:component": "lerna run --scope taro-code clean",
    "publish": "lerna publish from-git --yes",
    "update-version": "lerna version"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "pnpm": {
    "overrides": {
      "@types/react": "18.2.0"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "babel-preset-taro": "3.6.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-config-standard": "^16.0.3",
    "eslint-config-taro": "3.6.2",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-taro": "3.3.20",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.8.4",
    "typescript": "5.9.2"
  }
}
